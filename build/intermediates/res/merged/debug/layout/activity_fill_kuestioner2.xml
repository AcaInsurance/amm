<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/layHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/White">


        <RelativeLayout
            android:id="@+id/layTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/logosmall"/>


        </RelativeLayout>


        <com.aca.amm.CustomTextViewBold
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/layTitle2"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="Kuesioner"
            android:textColor="@color/AMMC"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layFooter"
        android:layout_below="@id/layHeader"
        android:background="@drawable/abg"
        android:orientation="vertical"
        >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="Apakah Anda atau anggota keluarga yang terdaftar sebagai calon peserta asuransi dalam 5 tahun terakhir:"
                    android:textColor="@android:color/white"
                    />


                <Switch
                    android:id="@+id/swiKuestioner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Pernah mengalami tindakan pembedahan, perawatan atau pengobatan di rumah sakit, sanatorium, atau lembaga rehabilitas medis lainnya?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="@string/keterangan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="2. Pernah berkonsultasi/berobat ke dokter, mengalami tindakan medis atau dinyatakan mempunyai masalah dengan"
                    android:textColor="@android:color/white"/>


                <Switch
                    android:id="@+id/swiKuestioner2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="i. Jantung, tekanan darah tinggi, diabetes, kanker, tumor, stroke?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="@string/keterangan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <Switch
                    android:id="@+id/swiKuestioner2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="ii. Luka bernanah, TBC, asma, epilepsi, pembengkakan paru- paru, radang selaput dada, radang usus besar?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="@string/keterangan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>

                <Switch
                    android:id="@+id/swiKuestioner2c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="iii. Sipilis atau penyakit kelamin lainnya, organ yang berkaitan dengan kandung kemih, masalah pencernaan, pankreas, batu ginjal, kencing batu?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner2c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="@string/keterangan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>

                <Switch
                    android:id="@+id/swiKuestioner2d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="iv. Gangguan tulang belakang, polio, kelainan kulit, kusta?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner2d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="@string/keterangan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <Switch
                    android:id="@+id/swiKuestioner2e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="v. HIV/AIDS atau gejala kompleks yang berhubungan dengan AIDS (ARC) malaria, disentri amuba, lupus?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner2e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="@string/keterangan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <Switch
                    android:id="@+id/swiKuestioner2f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="vi. Gangguan kesehatan lainnya, cacat fisik, kelainan bentuk tubuh atau luka serius lainnya yang tidak disebutkan di atas?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner2f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="@string/keterangan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPrev"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/infobutton"
                        android:drawableLeft="@drawable/back"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="btnBackClick"
                        android:padding="10dp"
                        android:text="Back"
                        android:textColor="@color/White"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/infobutton"
                        android:drawableRight="@drawable/next"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="btnNextClick"
                        android:padding="10dp"
                        android:text="Next"
                        android:textColor="@color/White"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/White">

        <TextView
            android:id="@+id/lblFooterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="@string/info_aca"
            android:textColor="@color/AMMC"
            android:textSize="12sp"/>


    </RelativeLayout>

</RelativeLayout>