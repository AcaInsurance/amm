<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillAsriSyariahActivity" >

    <RelativeLayout
        android:id="@+id/layHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/White" >

        <RelativeLayout  
            android:id="@+id/layTitle2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:padding="5dp">
            
            <ImageView
	            android:id="@+id/btnHome"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="5dp"
	            android:src="@drawable/logosmall"
	            android:clickable="true"
		        android:background="@drawable/buttonpressed"
	            android:onClick="btnHomeClick"
	            android:layout_alignParentLeft="true" />
            
            <com.aca.amm.CustomTextViewBold
	            android:id="@+id/lblTitle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/btnHome"
	            android:gravity="center_vertical|center_horizontal"
	            android:padding="10dp"
	            android:text="ASRI Syariah"
	            android:textColor="@color/AMMC"
	            android:textSize="18sp"
	            android:textStyle="bold" />
            
          	<ImageView
	            android:id="@+id/btnDelete"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
		        android:background="@drawable/buttonpressed"
	            android:padding="5dp"
	            android:src="@drawable/delete_photo"
	            android:clickable="true"
	            android:onClick="btnDeleteClick"
	            android:layout_alignParentRight="true"  />
        </RelativeLayout>
        
        
        

    </RelativeLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
   		 android:background="@drawable/abg" 
        android:layout_below="@id/layHeader" 
        android:layout_above="@+id/layFooter"
        >
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layHeader" 
        android:layout_above="@id/layFooter"
        android:padding="5dp"
        android:layout_marginTop="10dp">
        
        	
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
               <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sectionbg"
                android:padding="10dp"  >
                
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">

                <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="ID/No Nasabah"
	                android:layout_weight="0.5"
	                android:textColor="@color/White"/>
                
                <EditText
                    android:id="@+id/txtCustomerNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
	                android:layout_weight="0.5"
	            	android:enabled="false"
                    android:background="@drawable/edittext"
                    android:hint="ID/No Nasabah"
                    android:padding="7dp">
                </EditText>

                </TableRow>
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
                <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Nama Nasabah"
	                android:layout_weight="0.5"
	                android:textColor="@color/White"/>
                
                <EditText
                    android:id="@+id/txtCustomerName"
	                android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
	                android:layout_weight="0.5"
                    android:background="@drawable/edittext"
                    android:hint="Nama Nasabah"
                    android:padding="7dp"
                    android:enabled="false" >
                </EditText>
                </TableRow>
                
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
                
               <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text=""
	                android:layout_weight="0.5"
	                android:textColor="@color/White"/>
                     
                <Button
			        android:id="@+id/btnChooseCustomer"
			        android:layout_marginTop="20px"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.5"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center"
			        android:background="@drawable/infobutton"
			        android:padding="5dp"
			        android:text="Pilih"
			        android:textStyle="bold"
			        android:textColor="@color/White"
			        android:onClick="btnChooseCustomerClick" />
               </TableRow>
                
            </TableLayout>
            
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sectionbg"
                android:padding="10dp"  >
                
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
            	
               	<TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Luas Bangunan (m2)"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" 
	                />
               	
               	<EditText
	                android:id="@+id/txtLuasBangunan"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:inputType="phone"
	                android:digits="1234567890"
	                android:hint="0"
	                android:maxLength="4"
	                android:gravity="right"
	                android:layout_weight="0.5"
	                android:background="@drawable/edittext"
      				android:padding="7dp"  >
            	</EditText>
            	
               	</TableRow>
               	
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
               	<TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Harga Bangunan"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" />
               	
        	    <EditText
	                android:id="@+id/txtHargaBangunan"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:inputType="phone"
	                android:digits="1234567890"
	                android:hint="0"
	                android:layout_weight="0.5"
	                android:gravity="right"
	                android:background="@drawable/edittext"
      				android:padding="7dp" >
            	</EditText>
	            	
        	    </TableRow>
               	
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
               	<TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Harga Perabotan"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" />
               	
        	    <EditText
	                android:id="@+id/txtPerabotan"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:inputType="phone"
	                android:digits="1234567890"
	                android:hint="0"
	                android:layout_weight="0.5"
	                android:gravity="right"
	                android:background="@drawable/edittext"
      				android:padding="7dp" >
            	</EditText>
               	</TableRow>
               	
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
               	<TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Total"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" />
               	
        	    <EditText
	                android:id="@+id/txtTotalNilaiHarta"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:inputType="phone"
	                android:digits="1234567890"
	                android:text="0"
	                android:layout_weight="0.5"
	                android:enabled="false"
	                android:gravity="right"
	                android:background="@drawable/edittext"
      				android:padding="7dp" >
            	</EditText>
                </TableRow>
               	
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
				<TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Alamat Pertanggungan"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" />
               	
				<RelativeLayout 
				    android:layout_weight="0.5"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left"
			    >
			  <Switch
		            android:id="@+id/swiAlamatPertanggungan"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left"
		            android:selectAllOnFocus="true"
		            android:textOff="Tidak"
		            android:textOn="Sama" />
				</RelativeLayout>  
        	    </TableRow>
			  
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
        	    <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Alamat"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" />
        	    
                <EditText
	                android:id="@+id/txtalamat"
	                android:hint="Alamat pertanggungan"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.5"
	                android:inputType="textMultiLine|textCapCharacters"
	                android:background="@drawable/edittext"
      				android:padding="7dp" />
              </TableRow>
               	  
            
            	
              <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
		        <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Kota/Propinsi"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" />
		        
		        <EditText
	                android:id="@+id/txtProvinsi"
	                android:layout_width="0dp"
	                android:hint="Provinsi/Kota"
	                android:focusable="false"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.5"
	                android:background="@drawable/edittext"
      				android:padding="7dp" />
		       </TableRow>
		       
                <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
		        <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Kode Pos"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" />
		        
		        <EditText
	                android:id="@+id/txtKodePos2"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:inputType="number"
	                android:hint="Kode pos"
	                android:layout_weight="0.5"
	               	android:background="@drawable/edittext"
      				android:padding="7dp" />
		     </TableRow>
		    
          	</TableLayout>
          
		 	<TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sectionbg"
                android:padding="10dp"  >
               
		      
				<TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">    
            		
		          <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="Tanggal Mulai"
	                android:layout_weight="0.5"
	                android:textColor="@color/White" />
			    
			    <EditText
	                android:id="@+id/txtfromdate"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:hint="Tanggal Mulai"
	                android:layout_weight="0.5"
	                android:inputType="date"
	                android:background="@drawable/edittext"
					android:padding="7dp"  >
	            </EditText>
	               
			    </TableRow>
			    
			    <TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
	       	    <TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:text="Tanggal Berakhir"
					android:layout_weight="0.5"
					android:textColor="@color/White" />
	       	    
	       	    <EditText
	                android:id="@+id/txttodate"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:hint="Tanggal Berakhir"
	                android:inputType="date"
	                android:layout_weight="0.5"
	                android:background="@drawable/edittext"
					android:padding="7dp"   >
	            </EditText>
	            
	       	    </TableRow>
	            
	       	</TableLayout>
	       	
		  	<TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sectionbg"
                android:padding="10dp"  >
	       	    
     			<TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
                	<TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="0.5"
		                android:text="Rate"
		                android:textColor="@color/White"  />
	
	            	<EditText
		                android:id="@+id/txtRate"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:inputType="numberDecimal"
		                android:text="0.00"
		                android:gravity="right"
		                android:layout_weight="0.5"
		                android:enabled="false"
		         		android:background="@drawable/edittext"
	        			android:padding="7dp" /> 
				</TableRow>
				
				<TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
                	
                	<TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="0.5"
		                android:text="Premi"
		                android:textColor="@color/White"  />
	
	            	<EditText
		                android:id="@+id/txtPremi"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:inputType="number"
		                android:text="0.00"
		                android:layout_weight="0.5"
		                android:gravity="right"
		                android:enabled="false"
		         		android:background="@drawable/edittext"
	        			android:padding="7dp" /> 
	         	</TableRow>
	         	
				<TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp"
            		android:visibility="gone">
	              	<TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="0.5"
		                android:text="Diskon %"
		                android:textColor="@color/White"  />
	
		            <EditText
		                android:id="@+id/txtDiscountPct"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:inputType="number"
		                android:hint="0.00"
		                android:text="0.00"
		                android:gravity="right"
		                android:layout_weight="0.5"
		         		android:background="@drawable/edittext"
	        			android:padding="7dp" />
	           	</TableRow>
				
				<TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp"
            		android:visibility="gone">
	              	<TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="0.5"
		                android:text="Diskon"
		                android:textColor="@color/White"  />
	
		            <EditText
		                android:id="@+id/txtDiscount"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:inputType="number"
		                android:hint="0.00"
		                android:text="0.00"
		                android:gravity="right"
		                android:layout_weight="0.5"
		         		android:background="@drawable/edittext"
	        			android:padding="7dp" />
	           	</TableRow>
	           	
				<TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp"
            		android:visibility="gone">
	              	<TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="0.5"
		                android:text="Biaya Polis"
		                android:textColor="@color/White"  />
	
		            <EditText
		                android:id="@+id/txtPolicyCost"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:inputType="number"
		                android:text="0.00"
		                android:enabled="false"
		                android:gravity="right"
		                android:layout_weight="0.5"
		         		android:background="@drawable/edittext"
	        			android:padding="7dp" />
	           	</TableRow>
	           	
				<TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp"
            		android:visibility="gone">
	               <TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:text="Biaya Materai"
		                android:layout_weight="0.5"
		                android:textColor="@color/White" />
	
		            <EditText
		                android:id="@+id/txtMaterai"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:inputType="number"
		                android:text="0.00"
		                android:gravity="right"
		                android:layout_weight="0.5"
		                android:enabled="false"
		         		android:background="@drawable/edittext"
	        			android:padding="7dp" />
		        
	        	</TableRow>
				
				<TableRow 
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="2dp"	
	            	android:weightSum="1.0"
            		android:layout_width="0dp">
		            
					<TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:text="Total"
		                android:layout_weight="0.5"
		                android:textColor="@color/White"  />
	
		            <EditText
		                android:id="@+id/txtTotal"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:inputType="number"
		                android:text="0.00"
		                android:layout_weight="0.5"
		                android:gravity="right"
		                android:enabled="false"
		         		android:background="@drawable/edittext"
	        			android:padding="7dp" />  
              	
        		</TableRow>
         	</TableLayout>
	   		
		    <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_horizontal"
	            android:layout_marginTop="5dp">
                
                <Button
			        android:id="@+id/btnPrev"
			        android:layout_marginTop="20dp"
			        android:minWidth="100dp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			       android:gravity="center_horizontal|center_vertical"
			        android:background="@drawable/infobutton"
			        android:drawableLeft="@drawable/back"
			        android:padding="10dp"
			        android:text="Back"
			        android:textStyle="bold"
			        android:textColor="@color/White"
			        android:onClick="btnBackClick"
			        android:layout_marginRight="5dp" />
	            
	            <Button
			        android:id="@+id/btnNext"
			        android:layout_marginTop="20dp"
			        android:minWidth="100dp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center_horizontal|center_vertical"
			        android:background="@drawable/infobutton"
			        android:drawableRight="@drawable/next"
			        android:padding="10dp"
			        android:text="Next"
			        android:textStyle="bold"
			        android:textColor="@color/White"
			        android:onClick="btnNextClick" />
                
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/White" >
        
         <TextView
            android:id="@+id/lblFooterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="@string/info_aca"
            android:textColor="@color/AMMC"
            android:textSize="12sp"  />


    </RelativeLayout>


</RelativeLayout>