<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/txtNamaPerusahaan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/edittext"
            android:hint="Nama Perusahaan"
            android:inputType="textMultiLine"
            android:padding="7dp"
            />

        <EditText
            android:id="@+id/txtNoPolis1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/edittext"
            android:hint="Nomor Polis"
            android:padding="7dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/txtNamaPerusahaan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/edittext"
            android:hint="Nama Perusahaan"
            android:inputType="textMultiLine"
            android:padding="7dp" />

        <EditText
            android:id="@+id/txtNoPolis2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/edittext"
            android:hint="Nomor Polis"
            android:padding="7dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/txtNamaPerusahaan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/edittext"
            android:hint="Nama Perusahaan"
            android:inputType="textMultiLine"
            android:padding="7dp" />

        <EditText
            android:id="@+id/txtNoPolis3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/edittext"
            android:hint="Nomor Polis"
            android:padding="7dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/txtNamaPerusahaan4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/edittext"
            android:hint="Nama Perusahaan"
            android:inputType="textMultiLine"
            android:padding="7dp" />

        <EditText
            android:id="@+id/txtNoPolis4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/edittext"
            android:hint="Nomor Polis"
            android:padding="7dp"

            />
    </LinearLayout>


</LinearLayout>
