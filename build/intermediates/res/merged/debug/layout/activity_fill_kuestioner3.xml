<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/layHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/White">


        <RelativeLayout
            android:id="@+id/layTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/logosmall"/>


        </RelativeLayout>


        <com.aca.amm.CustomTextViewBold
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/layTitle2"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="Kuesioner"
            android:textColor="@color/AMMC"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layFooter"
        android:layout_below="@id/layHeader"
        android:background="@drawable/abg"
        android:orientation="vertical"
        >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/swiKuestioner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Pernah disarankan/dengan inisiatif sendiri untuk melalukan pemeriksaan Sinar-X (X-Ray), ECG, CT Scan, MRI, test darah lengkap?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtPenjelasan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="Jenis Pemeriksaaan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <EditText
                    android:id="@+id/txtPenjelasan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Kapan dilakukan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <EditText
                    android:id="@+id/txtPenjelasan3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Tujuan Pemeriksaaan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <EditText
                    android:id="@+id/txtPenjelasan4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Hasil Pemeriksaaan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <Switch
                    android:id="@+id/swiKuestioner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="4. Dalam 2 tahun terakhir menerima transfusi darah atau ditolak Donor Darah?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="@string/keterangan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="5. Hanya untuk Tertanggung wanita"
                    android:textColor="@android:color/white"
                    />
                <Switch
                    android:id="@+id/swiKuestioner5a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="i. Apakah pernah/ sedang hamil?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner5a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="Sebutkan kapan/ kapan tanggal perkiraan melahirkan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>

                <Switch
                    android:id="@+id/swiKuestioner5b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="ii. Apakah pernah mengalami gangguan kehamilan, payudara atau hormonal apapun, pernah/ disarankan untuk menjalani papsmear?"
                    android:textColor="@android:color/white"
                    android:textOff="@string/tidak"
                    android:textOn="@string/ya"/>

                <EditText
                    android:id="@+id/txtKuestioner5b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext"
                    android:hint="Sebutkan kapan/ kapan tanggal perkiraan melahirkan"
                    android:inputType="textMultiLine"
                    android:padding="7dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPrev"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/infobutton"
                        android:drawableLeft="@drawable/back"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="btnBackClick"
                        android:padding="10dp"
                        android:text="Back"
                        android:textColor="@color/White"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/infobutton"
                        android:drawableRight="@drawable/next"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="btnNextClick"
                        android:padding="10dp"
                        android:text="Next"
                        android:textColor="@color/White"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/White">

        <TextView
            android:id="@+id/lblFooterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="@string/info_aca"
            android:textColor="@color/AMMC"
            android:textSize="12sp"/>


    </RelativeLayout>

</RelativeLayout>