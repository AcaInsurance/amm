<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="10dp" 
    android:paddingTop="10dp" 
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="#55000000"
     >
    
	<LinearLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"      
        android:layout_toLeftOf="@+id/btnDeleteIncomplete"
        >

	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Product"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncProductName"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
           		android:text="OTOMATE"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	    
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Cust. Code"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncCustomerCode"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
          		android:text="00112233"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	    
	    
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Name"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncCustomerName"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
          		android:text="Test Name"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
       
          <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Total"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncTotalAmount"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
          		android:text="500,000.00"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
       
 	</LinearLayout>
     
     <ImageView
          android:id="@+id/btnDeleteIncomplete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:src="@drawable/delete"
   		  android:background="@drawable/buttonpressed"
          android:visibility="gone" />
        
</RelativeLayout>