    	                android:text="Jenis - jenis kanker yang dijamin dalam program asuransi kanker Wellwoman : "
    	                />
    	            
    	        </TableRow>
    	        
    	        <TableRow 
    	            android:layout_width="fill_parent"
    	            android:layout_height="wrap_content"
    	            android:background="#ffffff"
    	            android:layout_margin="1dp"
    	            >
    	            <TextView
    	                android:layout_width="match_parent"
    	                android:layout_height="wrap_content"
    	                android:padding="15dp"
    	                android:text="1. Satu atau kedua payudara "
    	                />
    	            
    	        </TableRow>
    	        
    	         <TableRow 
    	            android:layout_width="fill_parent"
    	            android:layout_height="wrap_content"
    	            android:background="#ffffff"
    	            android:layout_margin="1dp"
    	            >
    	            <TextView
    	                android:layout_width="match_parent"
    	                android:layout_height="wrap_content"
    	                android:padding="15dp"
    	                android:text="2. Satu atau kedua saluran tuba falopi "
    	                />
    	            
    	        </TableRow>
    	        
    	          <TableRow 
    	            android:layout_width="fill_parent"
    	            android:layout_height="wrap_content"
    	            android:background="#ffffff"
    	            android:layout_margin="1dp"
    	            >
    	            <TextView
    	                android:layout_width="match_parent"
    	                android:layout_height="wrap_content"
    	                android:padding="15dp"
    	                android:text="3. Satu atau kedua ovarium"
    	                />
    	            
    	        </TableRow>
    	        
    	           <TableRow 
    	            android:layout_width="fill_parent"
    	            android:layout_height="wrap_content"
    	            android:background="#ffffff"
    	            android:layout_margin="1dp"
    	            >
    	            <TextView
    	                android:layout_width="match_parent"
    	                android:layout_height="wrap_content"
    	                android:padding="15dp"
    	                android:text="4. Leher rahim (Serviks)"
    	                />
    	            
    	        </TableRow>
    	        
    	            <TableRow 
    	            android:layout_width="fill_parent"
    	            android:layout_height="wrap_content"
    	            android:background="#ffffff"
    	            android:layout_margin="1dp"
    	            >
    	            <TextView
    	                android:layout_width="match_parent"
    	                android:layout_height="wrap_content"
    	                android:padding="15dp"
    	                android:text="5. Uterus"
    	                />
    	            
    	        </TableRow>
    	        
    	             <TableRow 
    	            android:layout_width="fill_parent"
    	            android:layout_height="wrap_content"
    	            android:background="#ffffff"
    	            android:layout_margin="1dp"
    	            >
    	            <TextView
    	                android:layout_width="match_parent"
    	                android:layout_height="wrap_content"
    	                android:padding="15dp"
    	                android:text="6. Vagina"
    	                />
    	            
    	        </TableRow>
    	        
    	              <TableRow 
    	            android:layout_width="fill_parent"
    	            android:layout_height="wrap_content"
    	            android:background="#ffffff"
    	            android:layout_margin="1dp"
    	            >
    	            <TextView
    	                android:layout_width="match_parent"
    	                android:layout_height="wrap_content"
    	                android:padding="15dp"
    	                android:text="7. Vulva"
    	                />
    	            
    	        </TableRow>
    	    </TableLayout>
		
		
		<Button
             android:id="@+id/dlgOK"
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:layout_margin="20dp"
             android:background="@drawable/infobutton"
             android:drawableLeft="@drawable/ok"
             android:layout_gravity="center_horizontal"
             android:padding="10dp"
             android:text="OK"
             android:textColor="@color/White"
             android:textStyle="bold" />
		
    	</LinearLayout>
	</ScrollView>
</RelativeLayout>