<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="10dp" 
    android:paddingTop="10dp" 
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"        
    android:background="#55000000">
    
	<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnUnsyncPhoto"
        android:orientation="vertical"
        >
 
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="SPPA No."
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtESPPANo"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
           		android:text="000"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	     
       
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Product"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncProductName"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
           		android:text="OTOMATE"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	    
         
		 <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Name"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncCustomerName"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
           		android:text="NAME"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	    
         
         <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Total"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncTotalAmount"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
           		android:text="12000000"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	      
 	</LinearLayout>
 	
	
       <ImageView
            android:id="@+id/btnUnsyncPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
		    android:background="@drawable/buttonpressed" 
			android:layout_toLeftOf="@+id/btnPaidSPPA"
            android:layout_centerVertical="true"
            android:src="@drawable/photo" />
        
      
        
        <ImageView
            android:id="@+id/btnPaidSPPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
		    android:background="@drawable/buttonpressed"
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true"
            android:src="@drawable/paidsppa" />
         
    
</RelativeLayout>