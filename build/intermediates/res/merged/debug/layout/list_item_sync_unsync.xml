<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="10dp" 
    android:paddingTop="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#55000000">
    
	<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/btnDeleteSync"
         >

	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Product"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncProductName"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
           		android:text="OTOMATE"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	      
        
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Name"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncCustomerName"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
           		android:text="NAME"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	      
        
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Total"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSyncTotalAmount"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
           		android:text="000"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout> 
	      
 	</LinearLayout>
    
        <ImageView
            android:id="@+id/btnSyncSPPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
		    android:background="@drawable/buttonpressed"
            android:src="@drawable/syncsppa" />
        
        <ImageView
            android:id="@+id/btnPhotoTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/btnSyncSPPA"
            android:layout_centerVertical="true"
		    android:background="@drawable/buttonpressed"
            android:src="@drawable/photo" 
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/btnDeleteSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/btnPhotoTake"
		    android:background="@drawable/buttonpressed"
            android:layout_centerVertical="true"
            android:src="@drawable/delete"
            android:visibility="gone" />
        
        
</RelativeLayout>